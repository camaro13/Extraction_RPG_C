#include <stdio.h>
#include <stdlib.h>

int main(void)
{
    int input = 0;

    printf("------------------------------------------\n");

  
    printf("               게임 이름                  \n");

   
    printf("1. 게임 시작\n");
    printf("2. 데이터 삭제\n");
    printf("3. 종료\n\n");

 
    printf("입력 : ");
    scanf_s("%d", &input);

  
    printf("------------------------------------------\n");

    
    switch (input)
    {
    case 1:
        printf("게임 시작을 선택했습니다.\n");
        break;
    case 2:
        printf("데이터 삭제를 선택했습니다.\n");
        break;
    case 3:
        printf("게임을 종료합니다.\n");
        return 0;
    default:
        printf("잘못된 값을 입력했습니다.\n");
        break;
    }

    return 0;
}
